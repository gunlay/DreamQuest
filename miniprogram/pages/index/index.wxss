/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #2D1B47 0%, #F8E6FF 100%);
  padding: 0 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0;
}

.logo {
  display: flex;
  align-items: center;
}

.app-name {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.date {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: bold;
}

.dream-theory {
  color: #FFFFFF;
  margin-bottom: 40rpx;
}

.theory-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.theory-content {
  font-size: 28rpx;
  line-height: 1.6;
}

.fortune-card, .weekly-report {
  background: rgba(255, 255, 255, 0.76);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.card-header {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.fortune-content, .report-content {
  font-size: 26rpx;
  line-height: 1.6;
  overflow: hidden;
  max-height: 240rpx;
}

.expanded {
  max-height: none;
}

.input-section {
  position: fixed;
  bottom: 120rpx;
  left: 20rpx;
  right: 20rpx;
}

.chat-bubble {
  background: #F2F2F7;
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.input-area {
  display: flex;
  align-items: center;
}

.dream-input {
  flex: 1;
  background: #FFFFFF;
  border: 2rpx solid;
  border-image: linear-gradient(to right, #CF14BF, #971FCF) 1;
  border-radius: 36rpx;
  padding: 20rpx;
  margin-right: 20rpx;
}

.voice-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(to right, #971FCF, #CF14BF);
  border-radius: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
